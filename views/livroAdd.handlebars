<form action="/livro/add" method="post" class="form">
    <div class="form-control">
        <label for="autor">Autor: </label>
        <input type="text" name="autor" placeholder="Digite o nome do autor">
    </div>
    <div class="form-control">
        <label for="titulo">Título do livro: </label>
        <input type="text" name="titulo" placeholder="Digite seu email">
    </div>
    <div class="form-control">
        <input type="checkbox" name="capa" checked>
                <label for="capa">Livro de capa dura?</label>
    </div>
    <div class="form-control">
           <label for="preco">Preço do livro</label>
        <input type="text" name="preco" placeholder="Preço do livro">
             
    </div>

   
    <div class="form-control">
            <input type="submit" value="Cadastrar">
        </div>
</form>